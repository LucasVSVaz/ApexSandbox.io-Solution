public String formatName(String firstName, String lastName) {
    //code here
    String name = (firstName + '.' + lastName).toLowerCase();

    List<String> nameSplit = name.splitByCharacterType();

    if(String.isNotBlank(name)){
        return nameSplit[2].capitalize() + ', ' + nameSplit[0].capitalize();
    }
    else if(String.isBlank(nameSplit[0])){
        return nameSplit[2].capitalize();
    } 
    else if (String.isBlank(nameSplit[2])){
        return nameSplit[0].capitalize();
    } 
    else {
        return '';
    }
}