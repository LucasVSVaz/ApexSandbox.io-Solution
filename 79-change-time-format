public String changeTimeFormat(String strTime) {
    //code here

    List<String> splitTime = strTime.split(':');

    Time timeChange = Time.newInstance(Integer.valueOf(splitTime[0]),
    Integer.valueOf(splitTime[1]),0,0).addHours(12);

    String result = String.valueOf(timeChange);

    List<String> splitResult = result.split(':');

    Integer validationHour = Integer.valueOf(splitResult[0]);

    String minutes = splitResult[1];
    

	if(validationHour > 12){
        validationHour -= 12;
        return  validationHour + ':' + minutes + ' PM';
    }
	
    return validationHour + ':' + minutes + ' AM';
	

}