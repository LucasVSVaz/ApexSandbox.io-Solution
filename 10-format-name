public String formatName(String firstName, String lastName) {
    //code here
    String name = firstName + lastName;
    List<String> nameSplit = name.splitByCharacterType();

    if(String.isNotBlank(name)){
        return lastName + ' ' + firstName;
    }
    else if (String.isBlank(nameSplit[0])){
        return nameSplit[1];
    }
    else if (String.isBlank(nameSplit[1]){
        return nameSplit[0];
    }
    return '';
}