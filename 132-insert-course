public Id insertCourse(String name, String details, Integer credits) {
    // code here

    Integer validCredits = credits > 4 || credits < 1 ? null : credits;

    apxio__Course__c addCourse = new apxio__Course__c(
        Name = name,
        apxio__Course_Details__c = details,
        apxio__Credits__c = validCredits
    );

    List<apxio__Course__c> addCourseList = new List<apxio__Course__c>{addCourse};

    insert addCourseList;

    return addCourseList[0].id;
}