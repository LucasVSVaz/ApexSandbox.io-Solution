public String reverseWordsInASentence(String sentence){
    //your flawless code here
    List<String> getWords = sentence.split(' ');

    List<String> getReverse = new List<String>();

    String agrVai = '';

    for(Integer i = getWords.size() -1; i >=0 ; i--){
        agrVai += getWords.get(i) + ' ';
    }

    return agrVai.trim();
}