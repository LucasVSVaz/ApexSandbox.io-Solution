public String formatName(String firstName, String lastName) {
    //code here
    String name = (firstName + '#' + lastName).toLowerCase();

    List<String> nameSplit = name.split('#');

    if(nameSplit.size() == 2){
        return nameSplit[0].capitalize() + ', ' + nameSplit[1].capitalize();
    }
    if(nameSplit.size() == 1){
        return nameSplit[0].capitalize();
    }
    return '';
}